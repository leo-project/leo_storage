{require_otp_vsn, "R16B*|17"}.

{deps, [
        {leo_commons,           ".*", {git, "https://github.com/leo-project/leo_commons.git",           {tag, "1.1.3"}}},
        {leo_cache,             ".*", {git, "https://github.com/leo-project/leo_cache.git",             {tag, "0.6.6"}}},
        {leo_jerasure,          ".*", {git, "https://github.com/leo-project/leo_jerasure.git",          {tag, "0.4.0"}}},
        {leo_logger,            ".*", {git, "https://github.com/leo-project/leo_logger.git",            {tag, "1.1.8"}}},
        {leo_mq,                ".*", {git, "https://github.com/leo-project/leo_mq.git",                {tag, "1.3.12"}}},
        {leo_object_storage,    ".*", {git, "https://github.com/leo-project/leo_object_storage.git",    {branch, "1.4"}}},
        {leo_ordning_reda,      ".*", {git, "https://github.com/leo-project/leo_ordning_reda.git",      {branch, "develop"}}},
        {leo_redundant_manager, ".*", {git, "https://github.com/leo-project/leo_redundant_manager.git", {tag, "1.9.16"}}},
        {leo_rpc,               ".*", {git, "https://github.com/leo-project/leo_rpc.git",               {tag, "0.10.4"}}},
        {leo_statistics,        ".*", {git, "https://github.com/leo-project/leo_statistics.git",        {tag, "1.1.7"}}},
        {leo_watchdog,          ".*", {git, "https://github.com/leo-project/leo_watchdog",              {tag, "0.10.3"}}},
        {meck,                  ".*", {git, "https://github.com/eproxus/meck.git",                      {tag, "0.8.2"}}},
        {proper,                ".*", {git, "https://github.com/manopapad/proper.git", "fa58f82bdc35e20f44eeb710362c488f1378e23c"}}
       ]}.

{erl_opts, [{d, 'NOTEST'},
            warn_obsolete_guard,
            warn_unused_import,
            warnings_as_errors,
            warn_shadow_vars,
            warn_export_vars,
            warn_export_all]}.
{xref_checks, [undefined_function_calls]}.
{cover_enabled, true}.
{clean_files, []}.
