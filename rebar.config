{require_otp_vsn, "R15B03|R16B|R16B01|R16B02|R16B03|R16B03-1"}.

{deps, [
        {leo_commons,           ".*", {git, "https://github.com/leo-project/leo_commons.git",           {tag, "0.14.10"}}},
        {leo_logger,            ".*", {git, "https://github.com/leo-project/leo_logger.git",            {tag, "0.12.8" }}},
        {leo_mq,                ".*", {git, "https://github.com/leo-project/leo_mq.git",                {tag, "0.12.25"}}},
        {leo_object_storage,    ".*", {git, "https://github.com/leo-project/leo_object_storage.git",    {tag, "0.14.11"}}},
        {leo_ordning_reda,      ".*", {git, "https://github.com/leo-project/leo_ordning_reda.git",      {tag, "0.8.19" }}},
        {leo_redundant_manager, ".*", {git, "https://github.com/leo-project/leo_redundant_manager.git", {tag, "1.4.0"  }}},
        {leo_statistics,        ".*", {git, "https://github.com/leo-project/leo_statistics.git",        {tag, "0.14.9" }}},
        {meck,                  ".*", {git, "https://github.com/eproxus/meck.git",                      {tag, "0.7.2"  }}},
        {proper,                ".*", {git, "https://github.com/manopapad/proper.git", "7d535ac61e9c2a9a7616af4615c39595a3c5739f"}}
       ]}.

{erl_opts, [{d, 'NOTEST'},
            warn_obsolete_guard,
            warn_unused_import,
            warnings_as_errors,
            warn_shadow_vars,
            warn_export_vars,
            warn_export_all]}.
{xref_checks, [undefined_function_calls]}.
{cover_enabled, true}.
{clean_files, []}.
